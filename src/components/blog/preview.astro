---
import { Post } from '../../data/post';
const post: Post = Astro.props.post
---

<div class="card md:card-side bg-base-100 shadow-xl p-6 gap-6 m-5">
	{post.img &&
		<a href={`/${post.slug}`} class="shrink-0">
			<img src={post.img} alt={post.title} width="160" height="160" class="w-screen md:w-40 md:h-40 rounded bg-base-200 object-cover" />
		</a>
	}
	<div class="flex flex-col gap-4">
		<h2 class="card-title text-2xl font-bold">
			<a class="hover:underline" href={`/${post.slug}`}>{post.title}</a>
		</h2>
		<p class="text-sm text-base-content/70">{post.desc}</p>
	</div>
</div>

